<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding12</item>
        <item name="android:maxLines">4</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/text20</item>
    </style>

    <style name="pubDate">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/padding12</item>
        <item name="android:paddingRight">@dimen/padding12</item>
        <item name="android:textSize">@dimen/text12</item>
    </style>

    <style name="author">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/padding24</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/text16</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="type">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/padding24</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/text16</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="section">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:height">@dimen/padding50</item>
        <item name="android:background">@color/nosection</item>
        <item name="android:textColor">@color/SectionHeadColor</item>
        <item name="android:padding">@dimen/padding12</item>
        <item name="android:textSize">@dimen/text20</item>
    </style>

</resources>
